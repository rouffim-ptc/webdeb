ALTER TABLE `webdeb`.`contribution_has_relevance` 
ADD COLUMN `hit` INT(20) NULL DEFAULT 0 AFTER `version`;


update contribution_has_relevance chr
inner join contribution c on c.id_contribution = chr.id_contribution
set chr.hit = c.hit;
 
 ALTER TABLE `webdeb`.`contribution` 
DROP COLUMN `relevance`,
DROP COLUMN `hit`;
